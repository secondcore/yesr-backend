@model Global.YESR.Web.Areas.Merchants.ViewModels.PurchasesViewModel

@{
	ViewBag.Link = "purchases";
	ViewBag.Title = "Purchases";
}

@section breadcrumbs {
<section id="breadcrumbs">
    <ul>
        <li>@Html.ActionLink("home", "Index", "Home", new { area = "Merchants" }, null)</li>
        <li>purchases</li>
    </ul>
</section>
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                @Html.Action("MerchantDetail")
            </hgroup>
        </div>
    </section>
}

<article>
<table class='datagrid'>
    <tr>
        <th>Transaction Date</th>
        <th>Membership</th>
        <th>Amount</th>
    </tr> 
	
	@if (Model.MaxPage > 1)
{
    <tr><td colspan='3' align='right'>
               @{
	ViewBag.LinkControl = "Purchases";
	ViewBag.LinkId = @Model.MerchantId;
	}

			   @Html.Partial("_Pager")
        
    </td></tr>
}
	      
@foreach (var item in Model.Items)
{
    <tr>
        <td align='center'>@item.TransactionDate.ToString("dd MMM yyyy")</td>
        <td>@item.Membership.MembershipNumber</td>
        <td>@string.Format("{0:#,###,##0.00}", item.Amount) @item.Currency.Symbol</td>
    </tr>        
}



</table>

</article>


<aside>
    <h3>Useful Links</h3>
    <ul>
        <li>@Html.ActionLink("View Member Benefits", "Benefits", "Home", new { area = "" }, null)</li>
        <li><a href="">Fill out an Online Enrollment Form</a></li>
        <li><a href="">Request a Personal Presentation</a></li>
        <li><a href="">Send us a Question</a></li>
    </ul>
    
</aside>
