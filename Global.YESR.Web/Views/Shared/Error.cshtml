@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error";
}

<hgroup class="title">
    <h1 class="error">Error.</h1>
    <h2 class="error">An error occurred while processing your request! Plese report the following to YESR support:</h2>
    <div>
        Message: @Model.Exception.Message
    </div>
    <div>
        Stack Trace: @Model.Exception.StackTrace
    </div>
    <div>
        Internal Exception: @Model.Exception.InnerException.InnerException
        Internal Exception Message: @Model.Exception.InnerException.Message
        Internal Exception Stack Trace: @Model.Exception.InnerException.StackTrace
        Internal Exception Stack: @Model.Exception.InnerException.ToString()
    </div>
</hgroup>
